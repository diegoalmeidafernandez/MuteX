<Window x:Class="MuteX.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MuteX"
        Height="260"
        Width="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Estado del micrófono -->
        <TextBlock Text="Microphone Status:"
                   FontWeight="Bold"
                   FontSize="14"/>

        <TextBlock x:Name="TextMicStatus"
                   Grid.Row="1"
                   Text="UNKNOWN"
                   Foreground="Gray"
                   FontSize="16"
                   Margin="0,5,0,15"/>

        <!-- Hotkey actual -->
        <TextBlock Grid.Row="2"
                   Text="Current Hotkey:"
                   FontWeight="Bold"/>

        <TextBlock x:Name="TextHotKey"
                   Grid.Row="2"
                   Margin="120,0,0,0"
                   Text="F9"/>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,20,0,0">

            <Button x:Name="ButtonToggleMute"
                    Content="Toggle Mute"
                    Height="35"
                    Margin="0,0,0,8"
                    Click="ButtonToggleMute_Click"/>

            <Button x:Name="ButtonChangeHotKey"
                    Content="Change Hotkey"
                    Height="35"
                    Click="ButtonChangeHotKey_Click"/>

            <CheckBox x:Name="CheckStartup"
                      Content="Start with Windows"
                      Margin="0,10,0,0"
                      Checked="CheckStartup_Checked"
                      Unchecked="CheckStartup_Unchecked"/>
        </StackPanel>

        <!-- Exit button -->
        <Button x:Name="ButtonExit"
                Grid.Row="4"
                Content="Exit"
                HorizontalAlignment="Right"
                Width="80"
                Click="ButtonExit_Click"
                Margin="0,20,0,0"/>
    </Grid>
</Window>
