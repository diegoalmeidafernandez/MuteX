<Window x:Class="MuteX.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MuteX"
        Width="380"
        Height="330"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Variable"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="False"
        Icon="UI/Icons/app.ico">

    <!-- Fondo con bordes redondeados (para Mica) -->
    <Border x:Name="WindowBorder"
            Background="#FAFAFC"
            CornerRadius="12"
            BorderBrush="#D0D0D0"
            BorderThickness="1"
            Margin="1">

        <Grid Margin="25">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- MICROPHONE STATUS -->
            <TextBlock Text="Microphone Status:"
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="#222"/>

            <TextBlock x:Name="TextMicStatus"
                       Grid.Row="1"
                       Text="UNKNOWN"
                       Foreground="Gray"
                       FontSize="28"
                       Margin="0,8,0,25"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <!-- HOTKEY -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Current Hotkey:"
                           FontWeight="Bold"
                           FontSize="15"
                           Foreground="#333"/>
                <TextBlock x:Name="TextHotKey"
                           Margin="10,0,0,0"
                           FontSize="15"/>
            </StackPanel>

            <!-- BUTTONS -->
            <StackPanel Grid.Row="3"
                        Orientation="Vertical"
                        Margin="0,20,0,0">

                <Button x:Name="ButtonToggleMute"
                        Content="Toggle Mute"
                        Height="40"
                        Margin="0,0,0,10"
                        Background="#E5E5EA"
                        BorderBrush="#C8C8CC"
                        BorderThickness="1"
                        FontSize="15"
                        Click="ButtonToggleMute_Click"/>

                <Button x:Name="ButtonChangeHotKey"
                        Content="Change Hotkey"
                        Height="40"
                        Background="#E5E5EA"
                        BorderBrush="#C8C8CC"
                        BorderThickness="1"
                        FontSize="15"
                        Click="ButtonChangeHotKey_Click"/>

                <CheckBox x:Name="CheckStartup"
                          Content="Start with Windows"
                          FontSize="14"
                          Margin="0,14,0,0"
                          Checked="CheckStartup_Checked"
                          Unchecked="CheckStartup_Unchecked"/>
            </StackPanel>

            <!-- EXIT -->
            <Button x:Name="ButtonExit"
                    Grid.Row="4"
                    Content="Exit"
                    HorizontalAlignment="Right"
                    Width="90"
                    Height="32"
                    Margin="0,25,0,0"
                    Background="#E5E5EA"
                    BorderBrush="#C8C8CC"
                    BorderThickness="1"
                    FontSize="14"
                    Click="ButtonExit_Click"/>
        </Grid>

    </Border>
</Window>
