<Window x:Class="MuteX.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MuteX"
        Height="260"
        Width="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Variable"
        Background="#F5F5F7"
        Icon="UI/Icons/app.ico">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Microphone Status -->
        <TextBlock Text="Microphone Status:"
                   FontWeight="Bold"
                   FontSize="16"/>

        <TextBlock x:Name="TextMicStatus"
                   Grid.Row="1"
                   Text="UNKNOWN"
                   Foreground="Gray"
                   FontSize="20"
                   Margin="0,8,0,20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>

        <!-- Hotkey -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Current Hotkey:" FontWeight="Bold"/>
            <TextBlock x:Name="TextHotKey"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,25,0,0">

            <Button x:Name="ButtonToggleMute"
                    Content="Toggle Mute"
                    Height="35"
                    Margin="0,0,0,8"
                    Click="ButtonToggleMute_Click"/>

            <Button x:Name="ButtonChangeHotKey"
                    Content="Change Hotkey"
                    Height="35"
                    Click="ButtonChangeHotKey_Click"/>

            <CheckBox x:Name="CheckStartup"
                      Content="Start with Windows"
                      Margin="0,12,0,0"
                      Checked="CheckStartup_Checked"
                      Unchecked="CheckStartup_Unchecked"/>
        </StackPanel>

        <!-- Exit -->
        <Button x:Name="ButtonExit"
                Grid.Row="4"
                Content="Exit"
                HorizontalAlignment="Right"
                Width="80"
                Height="28"
                Margin="0,25,0,0"
                Click="ButtonExit_Click"/>
    </Grid>
</Window>
